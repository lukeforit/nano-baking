<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextView" />
    <style name="TextView.Card">
        <item name="android:background">@color/white_alpha</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TextView.Card.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:padding">@dimen/size_medium</item>
    </style>
    <style name="TextView.Card.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:padding">@dimen/size_large</item>
    </style>
    <style name="TextView.License">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:text">@string/license_freepik</item>
        <item name="android:layout_marginBottom">@dimen/size_small</item>
        <item name="android:layout_marginRight">@dimen/size_small</item>
    </style>
    <style name="TextView.Label">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingRight">@dimen/size_small</item>
        <item name="android:paddingLeft">@dimen/size_small</item>
        <item name="android:paddingTop">@dimen/size_tiny</item>
        <item name="android:paddingBottom">@dimen/size_tiny</item>
    </style>
    <style name="TextView.Common">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingRight">@dimen/size_small</item>
        <item name="android:paddingLeft">@dimen/size_small</item>
        <item name="android:paddingTop">@dimen/size_tiny</item>
        <item name="android:paddingBottom">@dimen/size_tiny</item>
    </style>

</resources>
